<div class="jumbotron">
  <h2>Teams:</h2>

<%= form_for @changeset, teams_path(@conn, :create), fn f -> %>
    <div class="form-group">
        <%= text_input f, :name, placeholder: "Name",
            class: "form-control" %>
        <%= error_tag f, :name %>
    </div>

    <%= submit "Create Team", class: "btn btn-primary" %>
<% end %>

  <ul>
  <%= for team <- @teams do %>
    <li><%= link(team.name, to: "/teams/#{team.id}") %></li>
  <% end %>
  </ul>

</div>
